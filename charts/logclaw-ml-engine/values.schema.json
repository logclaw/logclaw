{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LogClaw ML Engine Values",
  "type": "object",
  "properties": {
    "mlEngine": {
      "type": "object",
      "properties": {
        "kserve": {
          "type": "object",
          "properties": {
            "minReplicas": {
              "type": "integer",
              "minimum": 1
            },
            "maxReplicas": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "feast": {
          "type": "object",
          "properties": {
            "replicaCount": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "ollama": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "image": {
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                },
                "pullPolicy": {
                  "type": "string",
                  "enum": [
                    "Always",
                    "IfNotPresent",
                    "Never"
                  ]
                }
              }
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "resources": {
              "type": "object"
            },
            "persistence": {
              "type": "object",
              "properties": {
                "size": {
                  "type": "string"
                }
              }
            },
            "nodeSelector": {
              "type": "object"
            },
            "tolerations": {
              "type": "array"
            }
          }
        }
      }
    }
  }
}
