releases:
  - name: logclaw-ml-engine-{{ env "TENANT_ID" | default "dev-local" }}
    namespace: logclaw-{{ env "TENANT_ID" | default "dev-local" }}
    chart: ../charts/logclaw-ml-engine
    values:
      - ../charts/logclaw-ml-engine/ci/default-values.yaml
    set:
      - name: global.tenantId
        value: {{ env "TENANT_ID" | default "dev-local" }}
      - name: global.objectStorage.bucket
        value: {{ env "OBJECT_STORAGE_BUCKET" | default "logclaw-dev-local" }}
{{- if eq (env "REDIS_EXTERNAL" | default "false") "true" }}
      # External Redis â€” disable bundled sub-chart, use external URL
      - name: redis.enabled
        value: "false"
      - name: global.redisUrl
        value: {{ requiredEnv "REDIS_URL" }}
{{- end }}
